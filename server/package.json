{
  "name": "server",
  "version": "0.0.1",
  "scripts": {
    "build": "npx ts-node build.ts",
    "start": "cross-env NODE_ENV=development node --loader ts-node/esm ./src/index.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@services": "dist/services",
    "@repos": "dist/repos",
    "@models": "dist/models",
    "@configurations": "dist/configurations",
    "@declarations": "dist/declarations",
    "@server": "dist/server",
    "@routes": "dist/routes",
    "@util": "dist/util"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jsonfile": "^6.1.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.3",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
